import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n= sc.nextInt();
		int row_no=1;
		int cstar=1;
		while(row_no<=n){
		    int star =1;
		    while(star<=cstar){
		        System.out.print("*");
		        star=star+1;
		    }
		    row_no=row_no+1;
		    cstar=cstar+1;
		    System.out.println(" ");
		    System.out.println("    ");
		}
		
	}
}
